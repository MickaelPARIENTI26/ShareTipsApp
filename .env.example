# ShareTips Environment Variables
# Copy this file to .env and fill in the values

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sharetips
DB_USER=sharetips
DB_PASSWORD=your_secure_password_here

# JWT Authentication
JWT_SECRET=your_very_long_and_secure_jwt_secret_key_min_32_chars

# External APIs
ODDS_API_KEY=your_odds_api_key_here

# Optional: MoonPay (for payments)
MOONPAY_WEBHOOK_SECRET=your_moonpay_webhook_secret

# Email (SMTP) - Optional but recommended for production
# Common providers:
# - SendGrid: smtp.sendgrid.net, port 587
# - Mailgun: smtp.mailgun.org, port 587
# - AWS SES: email-smtp.{region}.amazonaws.com, port 587
EMAIL_SMTP_HOST=
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USERNAME=
EMAIL_SMTP_PASSWORD=
EMAIL_FROM_ADDRESS=noreply@sharetips.app
EMAIL_FROM_NAME=ShareTips

# Docker Registry (for production)
DOCKER_REGISTRY=ghcr.io/your-username
VERSION=latest
